{
  "name": "blue-carbon-registry",
  "version": "1.2.0",
  "description": "A decentralized carbon credit registry built on Solana blockchain for transparent and verifiable carbon offset management",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zebra0307/blue-carbon-registry.git"
  },
  "keywords": [
    "solana",
    "blockchain",
    "carbon-credits",
    "defi",
    "web3",
    "react-native",
    "nextjs",
    "expo"
  ],
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "build:web": "cd web-app && npm run build",
    "build:mobile": "cd mobile-app && npx expo build",
    "start:web": "cd web-app && npm run dev",
    "start:mobile": "cd mobile-app && npx expo start"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@expo/metro-runtime": "~3.1.3",
    "@solana/spl-token": "^0.4.8",
    "@solana/web3.js": "^1.95.4",
    "expo": "^50.0.21",
    "react-dom": "18.2.0",
    "react-native-web": "~0.19.6"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^24.3.3",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.7.3"
  }
}
